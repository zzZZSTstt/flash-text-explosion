<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/tvMainDisplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/default_text"
        android:textColor="@android:color/white"
        android:textSize="48sp"
        android:padding="20dp"/>

    <Button
        android:id="@+id/btnMenu"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_button_blue"
        android:text="@string/menu"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/llMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone"
        android:background="@android:color/black"
        android:alpha="0.95"
        android:elevation="8dp">

        <EditText
            android:id="@+id/etInputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_hint"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:backgroundTint="#4CAF50"
            android:padding="12dp"
            android:inputType="textMultiLine"
            android:maxLines="2"
            android:autofillHints="none"
            android:drawablePadding="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/font_size_label"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginEnd="12dp"/>

            <SeekBar
                android:id="@+id/sbFontSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="120"
                android:progress="48"
                android:progressTint="#2196F3"/>

            <TextView
                android:id="@+id/tvFontSizeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/initial_font_size"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnFontColor"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/font_color_button"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/round_button_purple"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/btnBgColor"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/bg_color_button"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/round_button_green"
                style="?android:attr/buttonBarButtonStyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <ToggleButton
                android:id="@+id/tbFlashToggle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:textOff="@string/flash_off"
                android:textOn="@string/flash_on"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/round_button_orange"/>

            <Button
                android:id="@+id/btnSelectFlashColors"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="@string/select_flash_colors"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/round_button_red"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/btnExplosionMode"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/explosion_mode"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/round_button_pink"
                style="?android:attr/buttonBarButtonStyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/flash_speed_label"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginEnd="12dp"/>

            <SeekBar
                android:id="@+id/sbFlashSpeed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="2000"
                android:progress="300"
                android:progressTint="#FF9800"/>

            <TextView
                android:id="@+id/tvFlashSpeedValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/initial_flash_speed"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>